<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4C4B6"
    tools:context=".activities.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/white_background"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="51dip"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btn_back"
                    android:layout_marginRight="-50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/back_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_gravity="center"
                            android:src="@drawable/salvadore" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="#00000000">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/mainBottomNeedList"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".20"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/mainBottomNeedListIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:src="@drawable/list_unselected" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Help List"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/muli_regular"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mainBottomContacts"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".20"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/mainBottomContactsIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:src="@drawable/contact_unselected" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contacts"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/muli_regular"/>
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/mainBottomCenterBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".20"
                        android:gravity="center"
                        android:visibility="visible">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/main_logo" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mainBottomMap"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".20"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/mainBottomMapIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:src="@drawable/map_unselected" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Map"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/muli_regular" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mainBottomSettings"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".20"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/mainBottomSettingsIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:src="@drawable/settings_unselected" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:fontFamily="@font/muli_regular"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mmmm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_logo" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

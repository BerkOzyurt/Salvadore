<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="25dp"
        android:background="@drawable/white_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Is Salvadore?"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:id="@+id/textView_whatIsSalvadore"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/muli_regular"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvadore is a kind of online personal help/support application. \n \n Thanks to this application, people will feel secure. Because Salvadore is now in your mobile phone. \n \n Salvadore is a location-based personal security application. \n If you need help, Salvadore is with you. \n \n Everyone can easily use Salvadore. Sign up with your Huawei ID. \n Identify the three people who your trust. \n When you need help, tap the app screen once. \n Salvadore will share your location with your contacts. \n Your location appears on the map and your contacts find you easily."
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:id="@+id/textView_aboutSalvadore"
            android:textColor="@android:color/black"
            android:fontFamily="@font/muli_regular"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="225dp"
            android:src="@drawable/main_logo"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="225dp"
            android:src="@drawable/salvadore"
            android:layout_gravity="center"
            android:layout_marginTop="-100dp"/>

    </LinearLayout>
</ScrollView>
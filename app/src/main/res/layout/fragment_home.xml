<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/white_background"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout_quickHelp">

            <ImageView
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:src="@drawable/main_logo"
                android:layout_gravity="right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick"
                android:textSize="70dp"
                android:textStyle="bold"
                android:fontFamily="@font/muli_regular"
                android:textColor="#871C37"
                android:layout_marginTop="-150dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HELP"
                android:textSize="70dp"
                android:textStyle="normal"
                android:fontFamily="@font/muli_regular"
                android:textColor="#F48255"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="-40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you need help ?"
                android:fontFamily="@font/muli_regular"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you need urgent help, please tap here. Salvadore users who near your location will help you. \n But if you have any time, you can give details by tapping the 'Give Detail' button.\n Remember, Salvadore is with you!"
                android:layout_gravity="center"
                android:fontFamily="@font/muli_regular"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>
        </LinearLayout>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_background"
            android:text="Give Detail !"
            android:id="@+id/btn_giveDetail"
            android:fontFamily="@font/muli_regular"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginBottom="50dp"/>
    </LinearLayout>
</ScrollView>
